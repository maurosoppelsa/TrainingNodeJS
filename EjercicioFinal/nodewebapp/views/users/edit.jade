extends ../layout
block content
    h1.
        Blob ID #{user._id}
    form(action='/user/#{user._id}/edit',method='post',name='updateblob',enctype='application/x-www-form-urlencoded')
        p Name:
            input#inputName(type='text', value='#{user.name}', name='name')
        p Badge:
            input#inputBadge(type='number', value='#{user.badge}', name='badge')
        p DOB:
            input#inputDob(type='date', value='#{userdob}', name='dob')
        p Are you Loved?:
            input#inputIsLoved(type='checkbox', name='isloved', checked=('#{user.isloved}' === 'true' ? "checked" : undefined))
        p
            input(type='hidden',value='PUT',name='_method')
        p
            button#btnSubmit(type='submit').
                Update